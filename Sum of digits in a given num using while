import java.util.*;
class Main
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt(),sum=0,r;      
        while(n>0)
        {
            r=n%10;                      
            sum=sum+r;                   
            n=n/10;                      
        }
        System.out.print(sum);
    } 
}
