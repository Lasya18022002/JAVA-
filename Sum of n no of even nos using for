import java.util.*;
class Main
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt(),i,sum=0,c=1;
        for(i=1;c<=n;i++)
        {
             if(i%2==0)
             {
                 sum=sum+i;
                 c++;
             }
        }       
        System.out.print(sum);
    }
}    
